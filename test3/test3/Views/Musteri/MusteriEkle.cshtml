@model test3.Models.StokEntity.StokMusteriBilgi
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MusteriEkle</title>
</head>
<body>
	<form method="post"  class="form-group">
		<div>
			<label>Müşteri Adı</label>
			@Html.TextBoxFor(m => m.MusteriAd, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.MusteriAd, "", new { @style = "color:red" })
		</div>
		<div>
			<label>Müşteri Soyad</label>
			@Html.TextBoxFor(m => m.MusteriSoyad, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.MusteriSoyad, "", new { @style = "color:red" })
		</div>
		<div>
			@Html.TextBoxFor(m => m.MusteriAdres, new { @class = "form-control" })
			@Html.ValidationMessageFor(m => m.MusteriAdres, "", new { @style = "color:red" })
		</div>
		<div>
			<button class="btn btn-info">Müşteri Ekle</button>
		</div>
		
		
	</form>
</body>
</html>
